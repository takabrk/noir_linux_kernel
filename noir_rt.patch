+
+			continue;
+		}
+		if (cpumask_test_cpu(cpu, &sched_ecore_mask)) {
+			SET_RQ_IDLE_MASK_FUNC(rq, cpu, set_idle_mask_ecore, clear_idle_mask_ecore);
+#ifdef CONFIG_SCHED_SMT
